<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>YARA Detection Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }
        .header {
            text-align: center;
            background-color: #f4f6f9;
            padding: 20px;
        }
        .header h1 {
            font-size: 28px;
            color: #22313f;
        }
        .header img {
            vertical-align: middle;
            width: 30px;
            margin-right: 10px;
        }
        .filter-container {
            text-align: center;
            margin: 10px 0 30px 0;
        }
        .filter-container input {
            width: 70%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .section-title {
            text-align: center;
            font-size: 22px;
            color: #22313f;
            font-weight: bold;
            margin: 20px 0 10px;
        }
        .file-section {
            padding: 0 30px 30px 30px;
        }
        .file-section h2 {
            font-size: 20px;
            color: #0a2940;
            margin-top: 40px;
        }
        .table-wrapper {
            overflow-x: auto;
            margin-top: 10px;
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 6px;
        }
        table {
            min-width: 1000px;
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            text-align: left;
            padding: 12px;
            font-size: 16px;
            border-bottom: 2px solid #ccc;
            white-space: nowrap;
        }
        th {
            background-color: #2c3e50;
            color: #fff;
            text-transform: capitalize;
        }
        td a {
            color: #0645AD;
            word-break: break-all;
        }
        .footer {
            text-align: center;
            font-size: 13px;
            color: #eee;
            padding: 15px;
            background-color: #2c3e50;
        }
        .footer a {
            color: #a9c6f2;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>üõ°Ô∏è YARA Detection Report</h1>
    </div>
    <div class="filter-container">
        <input type="text" id="filterInput" placeholder="Filter by rule name, file, or metadata...">
    </div>

    <div class="section-title">Matched Rules</div>

    {% for file, matches in grouped_records.items() %}
    <div class="file-section">
        <h2>Scanned File: {{ file }}</h2>
		<p style="margin: 4px 0 20px 0; font-size: 14px; color: #444;">
			<strong>SHA-256:</strong>
			<a href="https://ekky19.github.io/osint/?ip={{ matches[0].sha256 }}" target="_blank">{{ matches[0].sha256 }}</a>
		</p>
        <div class="table-wrapper">
			<table>
				{% set meta_keys = meta_keys_per_file[file] %}
				<thead>
					<tr>
						<th>Rule</th>
						<th>YARA File</th>
						{% for key in meta_keys %}
						<th>{{ key }}</th>
						{% endfor %}
					</tr>
				</thead>
				<tbody>
					{% for m in matches %}
					<tr>
						<td>{{ m.rule }}</td>
						<td>{{ m.yara_file }}</td>
						{% for key in meta_keys %}
						<td>{{ m.meta.get(key, '') }}</td>
						{% endfor %}											
					</tr>					
					{% endfor %}
					<tr class="no-match-row" style="display: none;">
							<td colspan="{{ 3 + meta_keys|length }}" style="text-align: center; font-style: italic; color: #888;">
								No matching records found.
							</td>
					</tr>
				</tbody>
			</table>
        </div>
    </div>
    {% endfor %}

    <div class="footer">
        Report generated by WebShell Analyzer<br>
        Developed by <a href="https://www.linkedin.com/in/ekremozdemir19/" target="_blank">Ekrem O.</a>
    </div>

    <script>
		document.addEventListener('DOMContentLoaded', () => {
		const filterInput = document.getElementById('filterInput');
		const contextMenu = document.getElementById('customContextMenu');
		const filterItem = document.getElementById('filterBySelection');

		// Filter function
		function applyFilter(value) {
			filterInput.value = value.toLowerCase();
			const tableSections = document.querySelectorAll('.file-section');

			tableSections.forEach(section => {
				const rows = section.querySelectorAll('tbody tr:not(.no-match-row)');
				let anyVisible = false;

				rows.forEach(row => {
					const rowText = row.innerText.toLowerCase();
					const match = rowText.includes(value.toLowerCase());
					row.style.display = match ? '' : 'none';
					if (match) anyVisible = true;
				});

				const noMatchRow = section.querySelector('.no-match-row');
				if (noMatchRow) {
					noMatchRow.style.display = anyVisible ? 'none' : '';
				}
			});
		}

		// Keyup filter
		filterInput.addEventListener('keyup', function () {
			applyFilter(this.value);
		});

		// Double-click to clear
		filterInput.addEventListener('dblclick', function () {
			this.value = '';
			const tableSections = document.querySelectorAll('.file-section');
			tableSections.forEach(section => {
				section.querySelectorAll('tbody tr').forEach(row => row.style.display = '');
				const noMatchRow = section.querySelector('.no-match-row');
				if (noMatchRow) noMatchRow.style.display = 'none';
			});
		});

		// Context menu with filter option
		document.addEventListener('contextmenu', function (e) {
			const selection = window.getSelection().toString().trim();
			if (selection) {
				e.preventDefault();
				contextMenu.style.top = `${e.pageY}px`;
				contextMenu.style.left = `${e.pageX}px`;
				contextMenu.style.display = 'block';

				filterItem.onclick = function () {
					applyFilter(selection);
					contextMenu.style.display = 'none';
				};
			} else {
				contextMenu.style.display = 'none';
			}
		});

		document.addEventListener('click', () => {
			contextMenu.style.display = 'none';
		});
	});

	</script>
	
	<ul id="customContextMenu" style="
    display: none;
    position: absolute;
    z-index: 1000;
    list-style: none;
    margin: 0;
    padding: 8px 0;
    background: white;
    border: 1px solid #ccc;
    box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    font-size: 14px;
    width: 160px;
">
    <li id="filterBySelection" style="padding: 8px 12px; cursor: pointer;">üîç Filter by selection</li>
</ul>


</body>
</html>
